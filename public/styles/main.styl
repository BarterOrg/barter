@import url("http://fonts.googleapis.com/css?family=Poiret+One");

border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

box-shadow()
  -webkit-box-shadow arguments
  box-shadow  arguments

body
  margin 0
  background #3A6F85
  font-family 'Poiret One'
  color #333
  font-weight 200
  line-height 30px
  font-size 18px

.container
  padding 10px

#map-canvas
  height 39em
  width 42em
  float left
  border 5px solid black

.barterLogo
  color black
  text-decoration none
  font-family 'Sonsie One', cursive
  font-size 90px

.sidebar
  height 38em
  width 25em
  float right
  border 5px solid black
  padding 10px
  background-color #DADADA
  text-align center

.postsContainer
  bottom 0
  left 0
  padding 5px
  overflow auto
  height 25em

.post
  text-align left
  background-color #7FBE6B
  margin 5px
  border 4px solid #6F853A
  border-radius 10px
  overflow auto
  div
    display inline-block
    vertical-align middle
  img
    width 100px
    margin 10px 5px 5px 5px
    border 2px solid #000
    border-radius 20px
  h2
    line-height 15px
    font-size 13px
  .postText
    width 280px
    height 100px
    overflow auto

.post:hover
  background-color #EBF9FB

.infobox
  border 2px solid black
  margin-top  8px
  background #333
  color #FFF
  font-family Arial, Helvetica, sans-serif
  font-size 12px
  text-align center
  padding  .5em 1em
  border-radius 2px
  text-shadow 0 -1px #000000
  box-shadow  0 0 8px #000
  img
    border 2px solid #47E
    border-radius 200px
    width 200px

#fbId, #_id, .gm-style-cc, img[src*="https://maps.gstatic.com/mapfiles/api-3/images/google_white2_hdpi.png"]
  display none

.underline
  text-decoration underline
